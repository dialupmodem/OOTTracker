@model OOTTracker.Models.ItemCheckRequirements.ItemCheckRequirementEditViewModel
@{
    Layout = "_Layout";
}

<div class="header">
    <h1 class="h4">Edit Requirement</h1>
</div>
<form method="post">
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="ItemCheckId">Item Check</label>
            <select asp-for="ItemCheckId" asp-items="Model.ItemChecks" class="form-select">
                <option value="">Select an Item Check...</option>
            </select>
        </div>
        <div class="col-md-6">
            <label asp-for="InventoryEquipmentId">Equipment</label>
            <select asp-for="InventoryEquipmentId" asp-items="Model.EquipmentItems" class="form-select">
                <option value="">Select Equipment...</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary me-2">Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>