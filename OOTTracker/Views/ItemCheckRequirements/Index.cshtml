@model OOTTracker.Models.ItemCheckRequirements.ItemCheckRequirementsIndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<h2>Item Check Requirements</h2>
<div class="row mt-3">
    <div class="col-3">
        <a class="btn btn-primary" asp-action="Edit">Add Item Check Requirement</a>
    </div>
</div>
<table data-toggle="table" data-pagination="true" data-page-size="10" data-search="true">
    <thead>
        <tr>
            <th data-width="125">#</th>
            <th data-field="Location" data-sortable="true">Location</th>
            <th data-field="CheckType" data-sortable="true">Type</th>
            <th data-field="Equipment" data-sortable="true">Equipment</th>
            <th data-field="Description" data-sortable="true">Description</th>
        </tr>
    </thead>
    @if (Model.ItemCheckRequirements != null)
    {
        <tbody>
            @foreach (var itemCheckRequirement in Model.ItemCheckRequirements)
            {
                <tr>
                    <td>
                        <a class="btn btn-primary me-2" asp-action="Edit" asp-route-id="@itemCheckRequirement.Id">
                            <i class="bi-pencil"></i>
                        </a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@itemCheckRequirement.Id">
                            <i class="bi-trash3"></i>
                        </a>
                    </td>
                    <td>@itemCheckRequirement.Location</td>
                    <td>@itemCheckRequirement.CheckType</td>
                    <td>@itemCheckRequirement.Equipment</td>
                    <td>@itemCheckRequirement.Description</td>
                </tr>
            }
        </tbody>
    }
</table>
