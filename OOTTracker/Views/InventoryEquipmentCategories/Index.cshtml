@model OOTTracker.Models.InventoryEquipmentCategories.InventoryEquipmentCategoriesIndexModel
@{
    Layout = "_Layout";
}

<div class="header">
    <h1 class="h4">Inventory Equipment Categories</h1>
    <div class="text-end">
        <a asp-action="Edit" class="btn btn-success">Add Category</a>
    </div>
</div>
<div class="table-responsive">
    <table data-toggle="table" data-pagination="true" data-page-size="10" data-search="true" class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th data-width="125" scope="col">#</th>
                <th data-width="60" data-width-unit="%" data-field="Name" data-sortable="true" scope="col">Name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        @if (Model.Categories != null)
        {
            <tbody>
                @for (var i = 0; i < Model.Categories.Count; i++)
                {
                    var category = Model.Categories[i];
                    <tr>
                        <td scope="row">@(i + 1)</td>
                        <td>@category.Name</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary btn-sm me-2">Edit</a>
                            <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        }
    </table>
</div>