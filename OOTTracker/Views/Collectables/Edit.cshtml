@model OOTTracker.Models.Collectables.EditCollectableViewModel
@removeTagHelper Microsoft.AspNetCore.Mvc.TagHelpers.OptionTagHelper, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}
<form method="post">
    <div class="row">
        <div class="col mt-2">
            <div class="card">
                <div class="card-header">
                    <h2>Edit Collectable</h2>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-6">
                            <label for="LocationId">Location</label>
                            <select class="form-select" name="LocationId">
                                @if (Model.Locations != null)
                                {
                                    <option></option>
                                    @foreach(var location in Model.Locations)
                                    {
                                        var locationSelected = Model.LocationId != null && location.Value == Model.LocationId.ToString();
                                        <option @(locationSelected ? "selected" : "") value="@location.Value">@location.Text</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <label for="CollectableTypeId">Collectable Type</label>
                            <select class="form-select" name="CollectableTypeId">
                                @if (Model.Types != null)
                                {
                                    <option></option>
                                    @foreach (var type in Model.Types)
                                    {
                                        var typeSelected = Model.TypeId != null && type.Value == Model.TypeId.ToString();
                                        <option @(typeSelected ? "selected" : "") value="@type.Value">@type.Text</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <label for="Description">Description</label>
                            <input class="form-control" name="Description" value="@Model.Description" />
                        </div>
                    </div>
                 
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


