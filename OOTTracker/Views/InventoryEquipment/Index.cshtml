@model OOTTracker.Models.InventoryEquipment.InventoryEquipmentIndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<h2>Inventory Equipment</h2>
<div class="row mt-3">
    <div class="col-3">
        <a class="btn btn-primary" asp-action="Edit">Add Equipment</a>
    </div>
</div>
<table data-toggle="table" data-pagination="true" data-page-size="10" data-search="true">
    <thead>
        <tr>
            <th data-width="125">#</th>
            <th data-field="Name" data-sortable="true">Name</th>
        </tr>
    </thead>
    @if (Model.Items != null)
    {
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        <a class="btn btn-primary me-2" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="bi-pencil"></i>
                        </a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="bi-trash3"></i>
                        </a>
                    </td>
                    <td>@item.Name</td>
                </tr>
            }
        </tbody>
    }
</table>
