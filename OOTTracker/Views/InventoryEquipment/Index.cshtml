@model OOTTracker.Models.InventoryEquipment.InventoryEquipmentIndexModel
@{
    Layout = "_Layout";
}

<div class="header">
    <h1 class="h4">Inventory Equipment</h1>
    <div class="text-end">
        <a asp-action="Edit" class="btn btn-success">Add Equipment</a>
    </div>
</div>
<div class="table-responsive">
    <table  data-toggle="table" data-pagination="true" data-pagze-size="10" data-search="true "class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th data-width="125" scope="col">#</th>
                <th data-width="60" data-width-unit="%" data-field="Name" data-sortable="true" scope="col">Name</th>
                <th data-width="350" data-field="Category" data-sortable="true" scope="col">Category</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        @if (Model.Items != null)
        {
            <tbody>
                @for (var i = 0; i < Model.Items.Count; i++)
                {
                    var item = Model.Items[i];
                    <tr>
                        <th scope="row">@(i + 1)</th>
                        <td>@item.Name</td>
                        <td>@item.Category</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm me-2">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        }
    </table>
</div>
