@model OOTTracker.Models.ItemChecks.ItemCheckEditViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<form method="post">
    <div class="row">
        <div class="card">
            <div class="card-header">
                <h2>Edit Item Check</h2>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-6">
                        <label for="LocationId">Location</label>
                        <select class="form-select" asp-for="LocationId" asp-items="Model.Locations">
                            <option value="Select a location..."></option>
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-6">
                        <label for="ItemCheckTypeId">Check Type</label>
                        <select class="form-select" asp-for="ItemCheckTypeId" asp-items="Model.ItemCheckTypes">
                            <option value="Select a check type..."></option>
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-6">
                        <label for="ItemAgeRequirementId">Age Requirement</label>
                        <select class="form-select" asp-for="ItemAgeRequirementId" asp-items="Model.ItemAgeRequirements">
                            <option value="Select an age requirement..."></option>
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-6">
                        <label for="Description">Description</label>
                        <input class="form-control" asp-for="Description" />
                    </div>
                </div>
                <div class="row">
                   <div class="col">
                       <button type="submit" class="btn btn-primary">Save</button>
                   </div>
                </div>
            </div>
        </div>
    </div>
</form>