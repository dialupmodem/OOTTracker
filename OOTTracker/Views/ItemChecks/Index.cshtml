@{
    Layout = "_Layout";
}
@model OOTTracker.Models.ItemChecks.ItemChecksIndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Item Checks</h2>
<div class="row mt-3">
    <div class="col-3">
        <a class="btn btn-primary" asp-action="Edit">Add Item Check</a>
    </div>
</div>
<table data-toggle="table" data-pagination="true" data-page-size="10" data-search="true">
    <thead>
        <tr>
            <th data-width="125">#</th>
            <th data-field="Location" data-sortable="true">Location</th>
            <th data-field="Type" data-sortable="true">Check Type</th>
            <th data-field="AgeRequirement" data-sortable="true">Age</th>
            <th data-field="Description" data-sortable="true">Description</th>
        </tr>
    </thead>
    @if (Model.ItemChecks != null)
    {
        <tbody>
            @foreach (var itemCheck in Model.ItemChecks)
            {
                <tr>
                    <td>
                        <a class="btn btn-primary me-2" asp-action="Edit" asp-route-id="@itemCheck.Id">
                            <i class="bi-pencil"></i>
                        </a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@itemCheck.Id">
                            <i class="bi-trash3"></i>
                        </a>
                    </td>
                    <td>@itemCheck.Location</td>
                    <td>@itemCheck.Type</td>
                    <td>@itemCheck.AgeRequirement</td>
                    <td>@itemCheck.Description</td>
                </tr>
            }
        </tbody>
    }
</table>