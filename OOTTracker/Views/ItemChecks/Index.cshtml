@model OOTTracker.Models.ItemChecks.ItemChecksIndexModel
@{
    Layout = "_Layout";
}

<div class="header">
    <h1 class="h4">Item Checks</h1>
    <div class="text-end">
        <a asp-action="Edit" class="btn btn-success">Add Item Check</a>
    </div>
</div>
<div class="table-responsive">
    <table data-toggle="table" data-pagination="true" data-page-size="10" data-search="true" class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th data-width="125">#</th>
                <th data-field="Location" data-sortable="true">Location</th>
                <th data-field="Type" data-sortable="true">Check Type</th>
                <th data-field="AgeRequirement" data-sortable="true">Age</th>
                <th data-field="Description" data-sortable="true">Description</th>
                <th data-width="150">Actions</th>
            </tr>
        </thead>
        @if (Model.ItemChecks != null)
        {
            <tbody>
                @for (var i = 0; i < Model.ItemChecks.Count; i++)
                {
                    var itemCheck = Model.ItemChecks[i];
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@itemCheck.Location</td>
                        <td>@itemCheck.Type</td>
                        <td>@itemCheck.AgeRequirement</td>
                        <td>@itemCheck.Description</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@itemCheck.Id" class="btn btn-primary btn-sm me-2">Edit</a>
                            <a asp-action="Delete" asp-route-id="@itemCheck.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        }
    </table>
</div>
